<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.control.Button?>
<VBox spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.abiralgautam.onlineshopping.LoginController"
      style="-fx-background-color: rgb(149, 165, 166)">
    <Button text="Back to Home" onAction="#returnToHome"/>
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <VBox alignment="CENTER" maxWidth="200">
            <Label text="Login"
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 20px; -fx-min-width: 100px"/>
        </VBox>
        <Label fx:id="responseLabel"/>

        <VBox alignment="CENTER" maxWidth="200">
            <Label text="Username " style="-fx-font-size: 20px;"/>
            <TextField fx:id="username" promptText="Enter Username"
                       style="-fx-min-width: 400px; -fx-border-radius: 5px; -fx-min-height: 50px"/>
        </VBox>
        <VBox alignment="CENTER" maxWidth="200">
            <Label text="Password " style="-fx-font-size: 20px;"/>
            <PasswordField fx:id="password" promptText="Enter Password"
                           style="-fx-min-width: 400px; -fx-border-radius: 5px; -fx-min-height: 50px"/>
        </VBox>
        <VBox alignment="CENTER" maxWidth="200">
            <Button text="Login" onAction="#login"
                    style="-fx-border-radius: 5px; -fx-background-color: rgb(44, 62, 80); -fx-label-padding: 8px; -fx-text-fill: white; -fx-min-width: 120px;"/>

        </VBox>
    </VBox>
</VBox>
