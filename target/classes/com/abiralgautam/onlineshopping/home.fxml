<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abiralgautam.onlineshopping.HomeController" fitToWidth="true" prefHeight="600" fx:id="scrollPane">
    <VBox spacing="10">
        <VBox spacing="10">
            <VBox spacing="10" alignment="CENTER">
                <Label text="Cart" style="-fx-padding: 10px; -fx-font-size: 16px;"/>
            </VBox>
            <TableView fx:id="cartTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="productIdColumn" text="Product ID">
                        <cellValueFactory><PropertyValueFactory property="productId" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="productNameColumn" text="Product Name">
                        <cellValueFactory><PropertyValueFactory property="productName" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="productPriceColumn" text="Price">
                        <cellValueFactory><PropertyValueFactory property="productPrice" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="productQuantityColumn" text="Quantity">
                        <cellValueFactory><PropertyValueFactory property="productQuantity" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="totalPriceColumn" text="Total Price">
                        <cellValueFactory><PropertyValueFactory property="totalPrice" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Label fx:id="grandTotalLabel" text="Grand Total: Rs. 0.00" style="-fx-font-size: 14px; -fx-padding: 10px;"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Remove" onAction="#removeFromCart"/>
                <Button text="Proceed To Checkout" onAction="#handleProceedToCheckout"/>
            </HBox>
            <StackPane fx:id="stackPane">
                <VBox fx:id="checkoutFormVBox" spacing="10" visible="false" style="-fx-padding: 10px;-fx-border-color: black; -fx-border-width: 1; -fx-background-color: #f0f0f0;">
                    <Label text="Checkout" style="-fx-font-size: 16px; -fx-padding: 10px;"/>
                    <Label text="Name:"/>
                    <TextField fx:id="nameField"/>
                    <Label text="Address:"/>
                    <TextField fx:id="addressField"/>
                    <Label text="Contact Number:"/>
                    <TextField fx:id="contactNumberField"/>
                    <Button text="Submit" onAction="#handleSubmitOrder"/>
                </VBox>
            </StackPane>
        </VBox>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Products" style="-fx-padding: 10px; -fx-font-size: 16px;"/>
        </VBox>
        <VBox fx:id="rootVBox" spacing="10">
            <!-- Product containers will be added here dynamically -->
        </VBox>

    </VBox>
</ScrollPane>
